<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= button_to 'フォロー外す', relationship_path(current_user.relationships.find_by(followed_id: user.id)),
                  method: :delete,
                  class: "btn btn-info btn-sm" %>
  <% else %>
    <%= button_to 'フォローする', relationships_path(user_id: user.id),
                  method: :post,
                  class: "btn btn-success btn-sm" %>
  <% end %>
<% end %>